<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ThemeAwareCardViewStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_columnWeight="1"
    android:layout_marginTop="16dp"
    android:clickable="true"
    android:elevation="0dp"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="16dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/exerciseName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_session"
                android:drawableEnd="@drawable/ic_chevron_right"
                android:drawableTint="@color/primary"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="@string/current_session" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/createdAt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5 Days ago" />

                <TextView
                    android:id="@+id/totalSets"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3 Total set" />

                <TextView
                    android:id="@+id/isCompleted"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Abandoned"
                    android:textColor="@color/secondary"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/sideImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="bottom|end"
            android:padding="24dp"
            android:scaleType="fitCenter"
            android:src="@drawable/img_fitness_1" />
    </FrameLayout>

</androidx.cardview.widget.CardView>